void setup(void) {
  u8g2.begin();
  
  u8g2.setFont(u8g2_font_6x10_tf);
  u8g2.setFontRefHeightExtendedText();
  u8g2.setDrawColor(1);
  u8g2.setFontPosTop();
  u8g2.setFontDirection(0);
}

void loop(void) {  
  u8g2.clearBuffer();
  u8g2.drawStr(5, 16, "Hello World!");
  u8g2.drawLine(0, 20, 127, 20);
  u8g2.sendBuffer();
  
  delay(100);
}
